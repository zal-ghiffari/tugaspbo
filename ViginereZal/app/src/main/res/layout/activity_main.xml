<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14"
        android:background="@drawable/bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hai! Selamat Datang Di Aplikasi Saya"
                android:textAlignment="center"
                android:id="@+id/textGrid"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:text="Aplikasi Enkripsi Dekripsi Viginere Java Berbasis Android"
                android:textAlignment="center"
                android:id="@+id/textGrid1"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <Button
            android:layout_marginTop="25dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_blue_light"
            android:onClick="halamanenkripsi"
            android:text="Enkripsi"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_blue_light"
            android:onClick="halamandekripsi"
            android:text="Dekripsi"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:onClick="tentangsaya"
            android:textColor="@android:color/holo_blue_light"
            android:text="Tentang Saya"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_light"
            android:text="Terimakasih telah menggunakan aplikasi saya\nHubungi saya melalui dibawah ini.\n"/>
        <Button
            android:id="@+id/hubungisaya"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:textColor="@android:color/holo_blue_light"
            android:onClick="hubungisaya"
            android:text="Hubungi Saya"/>
    </LinearLayout>


</ScrollView>