<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:labelFor="@+id/constraintLayout">

    <LinearLayout
        android:id="@+id/vertLayout1"
        android:layout_width="0dp"
        android:layout_height="587dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:labelFor="@+id/vertLayout1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/horizLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:labelFor="@+id/horizLayout1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textLabel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:labelFor="@+id/textLabel"
                android:text="Pesan"
                android:layout_gravity="center"
                android:textSize="19dp"
                tools:text="Pesan:" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:labelFor="@+id/horizLayout1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pesan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:labelFor="@+id/pesan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:labelFor="@+id/horizLayout2"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keyphraseLabel"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:labelFor="@+id/keyphraseLabel"
                android:text="Kunci:"
                android:layout_gravity="center"
                android:textSize="19dp"
                tools:text="Kunci:" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:labelFor="@+id/horizLayout2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kunci"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:labelFor="@+id/kunci" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout3"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:labelFor="@+id/horizLayout3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tombol_dekripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:labelFor="@+id/tombol_enkripsi"
                android:onClick="encryptOrDecryptUsingKeyphraseOnClick"
                android:text="Dekripsi"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout7"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:labelFor="@+id/horizLayout3"
            android:orientation="vertical">

            <Button
                android:id="@+id/tombol_menu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:labelFor="@+id/tombol_menu"
                android:onClick="halamanmenu"
                android:text="Menu"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout5"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:labelFor="@+id/horizLayout5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultsMessageLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:labelFor="@+id/resultsMessageLabel"
                android:text="Teks Terang"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/horizLayout6"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:labelFor="@+id/horizLayout5"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/teks_terang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="14"
                android:longClickable="false"
                android:focusable="false"
                android:inputType="textMultiLine"
                android:labelFor="@+id/teks_sandi" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
